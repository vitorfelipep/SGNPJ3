<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.1.xsd">
    
    <beans:bean id="appUserDetailsService" class="com.sgnpj.security.AppUserDetailsService"/>
    
    <beans:bean id="exceptionTranslationFilter" class="org.springframework.security.web.access.ExceptionTranslationFilter">
	    <beans:property name="accessDeniedHandler" ref="jsfAccessDeniedHandler"/>
	    <beans:property name="authenticationEntryPoint" ref="authenticationEntryPoint"/>
	</beans:bean>
	
	<beans:bean id="jsfAccessDeniedHandler" class="com.sgnpj.security.JsfAccessDeniedHandler">
	    <beans:property name="loginPath" value="/AcessoNegado.xhtml" />
	    <beans:property name="contextRelative" value="true" />
	</beans:bean>
	
	<beans:bean id="authenticationEntryPoint" class="com.sgnpj.security.JsfLoginUrlAuthenticationEntryPoint">
	    <beans:property name="loginFormUrl" value="/login.xhtml"/>
	    <beans:property name="redirectStrategy" ref="jsfRedirectStrategy" />
	</beans:bean>
	
	<beans:bean id="jsfRedirectStrategy" class="com.sgnpj.security.JsfRedirectStrategy"/>
    
    <http pattern="/login.xhtml" security="none" />
    <http  pattern="/Erro.xhtml" security="none"/>
    <http pattern="/javax.faces.resource/**" security="none"/>
           
	<http auto-config="false" use-expressions="true">
		<custom-filter ref="exceptionTranslationFilter" before="FILTER_SECURITY_INTERCEPTOR"/>
		
		<intercept-url pattern="/Home.xhtml" access="isAuthenticated()"/>
		<intercept-url pattern="/AcessoNegado.xhtml" access="isAuthenticated()"/>
		<intercept-url pattern="/Advogado/**" access="hasAnyRole('ADMINISTRADOR')"/>
		<intercept-url pattern="/Estagiario/**" access="hasAnyRole('ADMINISTRADOR')"/>
		<intercept-url pattern="/Atendimento/**" access="hasAnyRole('ADVOGADO','ADMINISTRADOR', 'ESTAGIARIO')"/>
		<intercept-url pattern="/Usuario/**" access="hasAnyRole('ADVOGADO','ADMINISTRADOR', 'ESTAGIARIO')"/>
		<intercept-url pattern="/Processo/**" access="hasAnyRole('ADVOGADO','ADMINISTRADOR')"/>
		<intercept-url pattern="/vara/**" access="hasAnyRole('ADVOGADO','ADMINISTRADOR')"/>
		<intercept-url pattern="/comarca/**" access="hasAnyRole('ADVOGADO','ADMINISTRADOR')"/>
		<intercept-url pattern="/Tribunal/**" access="hasAnyRole('ADVOGADO','ADMINISTRADOR')"/>
		<intercept-url pattern="/Audiencia/**" access="hasAnyRole('ADVOGADO','ADMINISTRADOR')"/>
		<intercept-url pattern="/Assistido/**" access="hasAnyRole('ADVOGADO','ADMINISTRADOR', 'ESTAGIARIO')"/>
		<intercept-url pattern="/Relatorio/**" access="hasAnyRole('ADVOGADO','ADMINISTRADOR', 'ESTAGIARIO')"/>
		<intercept-url pattern="/**" access="denyAll"/>
		
		<form-login login-page="/login.xhtml" authentication-failure-url="/login.xhtml?invalid=true"
			 default-target-url="/" always-use-default-target="true"/>
		<logout logout-url="/j_spring_security_logout" invalidate-session="true" />
	</http>
	
	<authentication-manager>
		<authentication-provider user-service-ref="appUserDetailsService">
			<!-- <password-encoder hash="md5"/> -->
		</authentication-provider>
	</authentication-manager>
           
</beans:beans>